<body>

    <div id="home" class="page active">
        <div class="glass-card">
            <h1>üìà Ringkasan Analytics</h1>
            <div class="stats-grid">
                <div class="stat-card"><span class="stat-label">Total Budget</span><span id="h-budget" class="stat-val">Rp 0</span></div>
                <div class="stat-card"><span class="stat-label">Sisa Saldo</span><span id="h-sisa" class="stat-val">Rp 0</span></div>
            </div>
            <div id="alertBox"></div>
            <div class="chart-box"><canvas id="pieChart"></canvas></div>
        </div>

        <div class="glass-card">
            <h1>üìä Perbandingan Bulanan</h1>
            <div class="chart-box"><canvas id="barChart"></canvas></div>
        </div>
    </div>

    <div id="transaksi" class="page">
        <div class="glass-card">
            <h1>üí∏ Tambah Pengeluaran</h1>
            <input type="date" id="t-date">
            <select id="t-cat">
                <option>Makan</option><option>Jajan</option><option>Bensin</option><option>Belanja</option><option>Kebutuhan</option><option>Lainnya</option>
            </select>
            <input type="number" id="t-amount" placeholder="Nominal Rp">
            <button onclick="saveTransaction()">Simpan Transaksi</button>
        </div>

        <div class="glass-card">
            <h1>üìú Riwayat Transaksi</h1>
            <div style="display:flex; gap:10px; margin-bottom:15px">
                <input type="month" id="filterMonth" onchange="renderAll()" style="margin:0">
                <button onclick="exportCSV()" style="width:70px; background:#475569; color:white">üìÇ</button>
            </div>
            <div id="transList"></div>
        </div>
    </div>

    <div id="settings" class="page">
        <div class="glass-card">
            <h1>‚öôÔ∏è Konfigurasi Budget</h1>
            <label>Budget Utama Bulanan</label>
            <input type="number" id="setBudgetInput" placeholder="Contoh: 5000000">
            <button onclick="updateGlobalBudget()">Update Budget</button>
        </div>

        <div class="glass-card">
            <h1>‚ö†Ô∏è Limit Per Kategori</h1>
            <select id="l-cat">
                <option>Makan</option><option>Jajan</option><option>Bensin</option><option>Belanja</option><option>Kebutuhan</option>
            </select>
            <input type="number" id="l-max" placeholder="Limit Nominal Rp">
            <button onclick="updateLimit()" style="background: var(--warning); color: #000;">Set Limit</button>
            <div id="limitList" style="margin-top:20px"></div>
        </div>
    </div>

    <nav class="nav-bar">
        <div class="nav-item active" onclick="nav('home', this)">
            <span class="nav-icon">üìä</span><span class="nav-text">Analytics</span>
        </div>
        <div class="nav-item" onclick="nav('transaksi', this)">
            <span class="nav-icon">üí∏</span><span class="nav-text">Transaksi</span>
        </div>
        <div class="nav-item" onclick="nav('settings', this)">
            <span class="nav-icon">‚öôÔ∏è</span><span class="nav-text">Set Limit</span>
        </div>
    </nav>

<script type="module">
    import { initializeApp } from "https://www.gstatic.com/firebasejs/10.7.1/firebase-app.js";
    import { getFirestore, collection, addDoc, onSnapshot, deleteDoc, doc, setDoc, getDoc, query, orderBy } from "https://www.gstatic.com/firebasejs/10.7.1/firebase-firestore.js";

    const firebaseConfig = {
        apiKey: "AIzaSyDBrKNaJsfGEVHSsPj9xWCPzZCsO_8UUJ8",
        authDomain: "trackingmoney-bb785.firebaseapp.com",
        projectId: "trackingmoney-bb785",
        storageBucket: "trackingmoney-bb785.firebasestorage.app",
        messagingSenderId: "725272276839",
        appId: "1:725272276839:web:d95f1643629c97edae09c2"
    };
    const app = initializeApp(firebaseConfig);
    const db = getFirestore(app);

    // State
    let dataStore = [], limitStore = {}, globalBudget = 0;
    let pieChart, barChart;
    const format = (n) => "Rp " + new Intl.NumberFormat('id-ID').format(n);

    // Navigasi
    window.nav = (id, el) => {
        document.querySelectorAll('.page').forEach(p => p.classList.remove('active'));
        document.querySelectorAll('.nav-item').forEach(n => n.classList.remove('active'));
        document.getElementById(id).classList.add('active');
        el.classList.add('active');
    };

    // Firebase Actions
    window.updateGlobalBudget = async () => {
        const val = parseInt(document.getElementById('setBudgetInput').value);
        if(val) await setDoc(doc(db, "config", "budget"), { totalBudget: val });
        Swal.fire('Updated!', 'Budget bulanan telah disimpan.', 'success');
    };

    window.saveTransaction = async () => {
        const date = document.getElementById('t-date').value;
        const cat = document.getElementById('t-cat').value;
        const amt = parseInt(document.getElementById('t-amount').value);
        if(!amt || !date) return Swal.fire('Oops', 'Data belum lengkap', 'warning');
        await addDoc(collection(db, "pengeluaran"), { tanggal: date, kategori: cat, nominal: amt, timestamp: new Date() });
        document.getElementById('t-amount').value = "";
    };

    window.updateLimit = async () => {
        const kat = document.getElementById('l-cat').value;
        const nom = parseInt(document.getElementById('l-max').value);
        if(nom) await setDoc(doc(db, "limits", kat), { kategori: kat, max: nom });
    };

    window.removeTrans = async (id) => { await deleteDoc(doc(db, "pengeluaran", id)); };
    window.removeLimit = async (id) => { await deleteDoc(doc(db, "limits", id)); };

    window.exportCSV = () => {
        let csv = "Tanggal,Kategori,Nominal\n";
        dataStore.forEach(d => { csv += `${d.tanggal},${d.kategori},${d.nominal}\n`; });
        const blob = new Blob([csv], { type: 'text/csv' });
        const url = URL.createObjectURL(blob);
        const a = document.createElement('a');
        a.href = url; a.download = 'Laporan_AgisBudget.csv'; a.click();
    };

    // Rendering
    window.renderAll = () => {
        const activeMonth = document.getElementById('filterMonth').value;
        let monthlyTotal = 0, catMap = {}, monthlyTrend = {};

        // Process Data
        const listHtml = document.getElementById('transList');
        listHtml.innerHTML = "";

        dataStore.forEach(d => {
            const m = d.tanggal.slice(0, 7);
            monthlyTrend[m] = (monthlyTrend[m] || 0) + d.nominal;

            if(m === activeMonth) {
                monthlyTotal += d.nominal;
                catMap[d.kategori] = (catMap[d.kategori] || 0) + d.nominal;
                listHtml.innerHTML += `
                    <div class="list-item">
                        <span><b>${d.kategori}</b><br><small>${d.tanggal}</small></span>
                        <span>${format(d.nominal)} <button class="del-btn" onclick="removeTrans('${d.id}')">‚úï</button></span>
                    </div>`;
            }
        });

        // Update Stats
        document.getElementById('h-budget').innerText = format(globalBudget);
        document.getElementById('h-sisa').innerText = format(globalBudget - monthlyTotal);

        // Limit Alerts
        const alertBox = document.getElementById('alertBox');
        alertBox.innerHTML = "";
        for(let k in limitStore) {
            if(catMap[k] > limitStore[k]) {
                alertBox.innerHTML += `<div class="alert-pill">üö® Limit ${k} Jebol! (${format(catMap[k])})</div>`;
            }
        }

        updateCharts(catMap, monthlyTrend);
    };

    function updateCharts(catData, trendData) {
        // Pie Chart
        const ctxPie = document.getElementById('pieChart');
        if(pieChart) pieChart.destroy();
        pieChart = new Chart(ctxPie, {
            type: 'doughnut',
            data: {
                labels: Object.keys(catData),
                datasets: [{ data: Object.values(catData), backgroundColor: ['#00d4ff','#00ffae','#facc15','#ff4d6d','#a855f7','#6366f1'] }]
            },
            options: { maintainAspectRatio: false, plugins: { legend: { position: 'bottom', labels: { color: '#fff', font: { size: 10 } } } } }
        });

        // Bar Chart (Monthly Trend)
        const ctxBar = document.getElementById('barChart');
        if(barChart) barChart.destroy();
        const sortedMonths = Object.keys(trendData).sort();
        barChart = new Chart(ctxBar, {
            type: 'bar',
            data: {
                labels: sortedMonths,
                datasets: [{ label: 'Total Pengeluaran', data: sortedMonths.map(m => trendData[m]), backgroundColor: varColor('--primary') }]
            },
            options: { maintainAspectRatio: false, scales: { y: { ticks: { color: '#64748b' } }, x: { ticks: { color: '#64748b' } } } }
        });
    }

    function varColor(name) { return getComputedStyle(document.documentElement).getPropertyValue(name); }

    // Init & Listeners
    document.getElementById('filterMonth').value = new Date().toISOString().slice(0, 7);
    document.getElementById('t-date').valueAsDate = new Date();

    onSnapshot(doc(db, "config", "budget"), (s) => { if(s.exists()) globalBudget = s.data().totalBudget; renderAll(); });
    onSnapshot(collection(db, "limits"), (s) => {
        limitStore = {};
        const lList = document.getElementById('limitList');
        lList.innerHTML = "<h1>Limit Saat Ini</h1>";
        s.forEach(d => {
            const data = d.data(); limitStore[data.kategori] = data.max;
            lList.innerHTML += `<div class="list-item"><span>${data.kategori}: ${format(data.max)}</span><button class="del-btn" onclick="removeLimit('${data.kategori}')">Hapus</button></div>`;
        });
        renderAll();
    });
    onSnapshot(query(collection(db, "pengeluaran"), orderBy("tanggal", "desc")), (s) => {
        dataStore = s.docs.map(d => ({id: d.id, ...d.data()}));
        renderAll();
    });

</script>
</body>
</html>
